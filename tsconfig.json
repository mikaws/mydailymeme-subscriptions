{
  "compilerOptions": {
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "module": "es2022",
      "moduleResolution": "node",
      "noImplicitAny": false,
      "outDir": "dist",
      "rootDirs": ["src", "__tests__"],
      "sourceMap": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "target": "es2022",
      "esModuleInterop": true,
      "noEmit": false,
      "strictNullChecks": true,
      "removeComments": true,
      "types": ["jest", "node"]
  },
  "include": [
    "src",
  ],
  "exclude": [
      "node_modules",
      // "**/*.spec.ts",
      // "**/*.test.ts"
  ]
}